<Window x:Class="DepthTracker.UI.TrackerPicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DepthTracker"
      mc:Ignorable="d" 
        Width="300"
        Height="300"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TrackerPicker">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Pinball" Click="Button_Click" Background="White" />
        <Button Grid.Row="1" Content="Car" Click="Button_Click" Background="White" />
        <Button Grid.Row="2" Content="Kings" Click="Button_Click" Background="White" />
        <Button Grid.Row="3" Content="Never" Click="Button_Click" Background="White" />
    </Grid>
</Window>
